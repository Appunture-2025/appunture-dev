{
  "title": "Appunture Backend Observability",
  "uid": "appunture-backend",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["appunture", "spring", "prometheus"],
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP P95 Latency",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=\"appunture-backend\", uri!~\"/actuator.*\"}[$__interval])) by (le))",
          "legendFormat": "P95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.8 },
              { "color": "red", "value": 1.2 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "5xx Error Rate",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\", uri!~\"/actuator.*\"}[5m]))",
          "legendFormat": "errors/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Rate Limit Rejections",
      "id": 3,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(app_rate_limit_rejections_total[5m]))",
          "legendFormat": "rejections/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Requests per Endpoint",
      "id": 4,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{uri!~\"/actuator.*\"}[$__interval])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        }
      },
      "options": {
        "legend": {
          "showLegend": true,
          "position": "bottom"
        }
      }
    }
  ]
}
